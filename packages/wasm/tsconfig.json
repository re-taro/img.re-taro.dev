{
  "compilerOptions": {
    "target": "ESNext",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "inlineSources": true,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "out"
  ]
}
